<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><img src="/Images/favicon.png" />Create New Question</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4"><label for="usr" class="paddinright20">Question Name</label></div>
                        <div class="col-lg-8"><input type="text" id="usr"></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4"><label for="usr" class="paddinright20">Project</label></div>
                        <div class="col-lg-8">
                            <select>
                                <option>Project #1</option>
                                <option>Project #2</option>
                                <option>Project #3</option>
                                <option>Project #4</option>
                                <option>Project #5</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4"><label for="usr" class="paddinright40">Standard</label></div>
                        <div class="col-lg-8">
                            <select>
                                <option>A</option>
                                <option>B</option>
                                <option>C</option>
                                <option>D</option>
                                <option>E</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Add</button>
            </div>
        </div>

    </div>
</div>
