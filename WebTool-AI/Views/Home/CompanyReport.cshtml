@{
    ViewBag.Title = "Dashboard";
}
<div class="zoom">
    <a data-toggle="modal" data-target="#myModal2" class="zoom-fab zoom-btn-large" id="zoomBtn"><i class="fa fa-2x fa-save"></i></a>
</div>
<div class="row">
    <div class="col-lg-12">
        <h3>ABC COMPANY</h3>
        <hr />
        <h5><b>AWARD CATEGORY</b> : <img src="~/Images/award-category/corporate-governance.png" width="15px" /><span>  CORPORATE GOVERNANCE</span></h5>
    </div>
    <a href="#" data-toggle="modal" data-target="#myModal" class="btn btn-primary"><i class="ti-plus"></i> Assign Assessor</a>
    <a href="#" data-toggle="modal" data-target="#myModal2" class="btn btn-primary"><i class="ti-receipt"></i> Compare Assessor Report</a>
</div>
<div class="header">
    <h4 class="title">Total No. of Companies</h4>
</div>
<div class="row">
    <div class="col-lg-4 col-sm-12">
        <div class="card">
            <div class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="numbers text-center">
                            <p>Assessor #1</p>
                            Dr. Taghrid Abu Salim
                        </div>
                    </div>
                </div>
                <div class="footer text-center">
                    <hr />
                    <div class="stats">
                        <a href="@Url.Action("EachAssessorReport","Home")" class="btn btn-primary"><i class="ti-eye"></i> See Report</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-sm-12">
        <div class="card">
            <div class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="numbers text-center">
                            <p>Assessor #2</p>
                            Mohammed
                        </div>
                    </div>
                </div>
                <div class="footer text-center">
                    <hr />
                    <div class="stats">
                        <a href="@Url.Action("EachAssessorReport","Home")" class="btn btn-primary"><i class="ti-eye"></i> See Report</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-sm-12">
        <div class="card">
            <div class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="numbers text-center">
                            <p>Assessor #3</p>
                            Natheem Sabbah
                        </div>
                    </div>
                </div>
                <div class="footer text-center">
                    <hr />
                    <div class="stats">
                        <a href="@Url.Action("EachAssessorReport","Home")" class="btn btn-primary"><i class="ti-eye"></i> See Report</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="header">
    <h4 class="title">Final Input</h4>
</div>
<div class="row">
    <div class="col-lg-12 col-sm-12">
        <div class="card">
            <div class="content">
                <textarea rows="15" placeholder="Enter your input..."></textarea>
            </div>
        </div>
    </div>
</div>
<div class="header">
    <h4 class="title">Final Score</h4>
</div>
<div class="row">
    <div class="col-lg-12 col-sm-12">
        <div class="card">
            <div class="content">
                <table>
                    <thead>
                        <tr>
                            <th>Topic</th>
                            <th>Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Final Score (Out of 100)</td>
                            <td><input type="text" placeholder="Enter Score..." /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><img src="/Images/favicon.png" />Assign Assessor</h4>
            </div>
            <div class="modal-body">
                <label>
                    Choose Assessor :
                    <select>
                        <option disabled>Select Assessor</option>
                        <option>Assessor Name #1</option>
                        <option>Assessor Name #2</option>
                        <option>Assessor Name #3</option>
                        <option>Assessor Name #4</option>
                        <option>Assessor Name #5</option>
                        <option>Assessor Name #6</option>
                        <option>Assessor Name #7</option>
                        <option>Assessor Name #9</option>
                    </select>
                </label>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Confirm &amp; Assign</button>
            </div>
        </div>

    </div>
</div>
